@import 'nib'

global_reset()

main-color = #94D500

@font-face 
  font-family Montserrat
  src url(Montserrat.otf)

body
	font-family Montserrat !important
	font-weight bold
	background-color white
	color #444
	text-align center

.pagecontainer
	height: 100%;
	width: 100%;

header
	text-align center
	background-color main-color
	height 150px
	margin 0
	margin-bottom 20px
	padding 5px
	top 0

img
	display inline-block
	vertical-align middle
	height 50%
	width auto
	float left

h1
	color white !important

p, label
	font-size 1.75em

.list-group
	height 250px
	overflow-y auto
	border 4px solid main-color
	border-radius 30px
	font-size 1.5em

a
	border none !important

input[type=number]
	text-align center
	height 50px
	border 4px solid main-color !important
	border-radius 40px !important
	font-size 1.75em
	margin-bottom 20px
	background white !important

.inputs
	display block
	margin 0 auto
	padding 10px

.button
	border 2px solid white
	border-radius 40px
	background main-color
	color white
	font-size 1.75em
	width 55px
	height 55px
	transition all 0.5s
	outline none

.button:active
	background darken(main-color, 40%)

.specialbutton
	@extend .button
	width 110px
	border 4px solid white
	margin 10px

.specialbutton:active
	background darken(main-color, 40%)

.buttonGroup
	display block
	margin 0 auto
	text-align center

.activeListItem
	background main-color !important
	color white !important
